<?xml version="1.0" ?>
<launch>
  <arg name="robot_ip" />
  <arg name="arm_id" default="panda" />
  <arg name="gripper_homed" default="false" />

  <group ns="$(arg arm_id)">
    <include file="$(find franka_gripper)/launch/franka_gripper.launch">
      <arg name="robot_ip" value="$(arg robot_ip)" />
      <arg name="stop_at_shutdown" value="true" />
      <arg name="arm_id" value="$(arg arm_id)" />
    </include>
  </group>

  <node name="franka_gripper_test" pkg="franka_example_controllers" type="franka_gripper_test" respawn="false" output="screen">
    <rosparam param="gripper_homed" subst_value="true">$(arg gripper_homed)</rosparam>
    <remap from="joint_states" to="$(arg arm_id)/franka_gripper/joint_states" />
    <remap from="gripper/homing" to="$(arg arm_id)/franka_gripper/homing" />
    <remap from="gripper/grasp" to="$(arg arm_id)/franka_gripper/grasp" />
    <remap from="gripper/move" to="$(arg arm_id)/franka_gripper/move" />
    <remap from="gripper/stop" to="$(arg arm_id)/franka_gripper/stop" />
  </node>
</launch>
